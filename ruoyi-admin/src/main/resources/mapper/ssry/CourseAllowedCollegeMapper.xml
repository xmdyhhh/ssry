<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ruoyi.ssry.mapper.CourseAllowedCollegeMapper">

    <!-- 删除指定课程的所有可选学院 -->
    <delete id="deleteByCourseIds">
        DELETE FROM course_allowed_colleges
        WHERE course_id IN
        <foreach item="id" collection="courseIds" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 查询多个课程已允许的学院ID（可用于回显） -->
    <select id="selectCollegeIdsByCourseIds" resultType="java.lang.Long">
        SELECT DISTINCT college_id
        FROM course_allowed_colleges
        WHERE course_id IN
        <foreach item="id" collection="courseIds" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <!-- 批量插入 -->
    <insert id="batchInsert">
        INSERT INTO course_allowed_colleges (course_id, college_id)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.courseId}, #{item.collegeId})
        </foreach>
    </insert>

</mapper>